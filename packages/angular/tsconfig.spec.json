{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "module": "CommonJS",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@touchspin/angular": ["./src/public-api"],
      "@touchspin/angular/*": ["./src/*"],
      "@touchspin/angular/vanilla": ["./vanilla/src/public_api"],
      "@touchspin/angular/bootstrap3": ["./bootstrap3/src/public_api"],
      "@touchspin/angular/bootstrap4": ["./bootstrap4/src/public_api"],
      "@touchspin/angular/bootstrap5": ["./bootstrap5/src/public_api"],
      "@touchspin/angular/tailwind": ["./tailwind/src/public_api"]
    }
  },
  "include": ["tests/**/*.spec.ts", "tests/**/*.d.ts", "tests/**/*.ts", "src/**/*.ts"],
  "files": ["setup-jest.ts"]
}
